<% if logged_in? %>

  <h2 class="author"> <%= current_user.username %>'s Dream Journal </h1>

  <% @entries = current_user.entries %>
  <% @entries.each do |entry| %>
    <div class="content">
      <%= "  #{entry.date}" %>
      <%= "~  #{entry.content}" %>
      <br>
      <a href="/entries/<%=entry.id%>">Edit/Delete </a>
    </div>
  <%end%>

<% else %>

  <h2>Please sign up or login to make dream entries</h2>

<% end %>
